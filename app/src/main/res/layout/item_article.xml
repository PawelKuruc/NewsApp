<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivArticleImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/nasa_selfie" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/ivArticleImage"
                android:layout_toRightOf="@+id/ivArticleImage"
                android:maxLength="100"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                tools:text="Selfie na kosmicznym spacerze. Powstało na Nikonie D5 - Spider's Web" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/ivArticleImage"
                android:layout_toRightOf="@+id/ivArticleImage"
                android:maxLength="500"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Selfie z najdroższej lustrzanki Nikona, do tego zrobione w kosmosie? Takie fotografie mogę oglądać godzinami. Zobaczmy, jakim sprzętem fotograficznym dysponują astronauci na ISS." />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/ivArticleImage"
                android:layout_toRightOf="@+id/ivArticleImage"
                android:maxLength="15"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Spidersweb.pl" />
    </RelativeLayout>

</android.support.v7.widget.CardView>